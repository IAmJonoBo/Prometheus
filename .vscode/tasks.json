{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Sync All Repos",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "for dir in */; do (cd \"$dir\" && git add . && git commit -m 'Sync changes' && git push); done"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Start Puter Proxy",
      "type": "shell",
      "command": "npm start",
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Puter proxy listening"
        }
      }
    }
  ]
}
