{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "Prometheus Desktop",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "pnpm dev --filter prometheus-web",
    "beforeBuildCommand": "pnpm build --filter prometheus-web",
    "devPath": "http://localhost:3000",
    "distDir": "../web/out"
  },
  "tauri": {
    "windows": [
      {
        "title": "Prometheus Strategy OS",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "bundle": {
      "identifier": "com.prometheus.desktop",
      "active": false
    },
    "allowlist": {
      "http": {
        "all": true
      },
      "shell": {
        "open": true
      }
    }
  }
}
